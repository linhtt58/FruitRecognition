<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlid"
    tools:context=".DrawingContour.DrawContour">

        <TextView
            android:id="@+id/helpTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Draw Contour"

            android:textColor="@android:color/holo_blue_light"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/view_drawing_pad"
            android:layout_toEndOf="@+id/view_drawing_pad"
            android:layout_marginLeft="147dp"
            android:layout_marginStart="147dp" />

        <FrameLayout
            android:id="@+id/view_drawing_pad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90">

        </FrameLayout>

</RelativeLayout>
